    //});

    function chkZHName(zhangHao) {
        var data = {};
        data.loginAccount = zhangHao;
        $.post("/Account/getBankUser", data, function (jsons) {
            $("#zhangHaoName").text("    对方名字：" +jsons.BankUser);
        }, 'json');


    }

</script>
