@{
    Page.Title = "行业新闻";
    Layout = null;
}

<style type="text/css">
    .deftitle { height:36px; line-height:36px;  position:absolute; right:10%; bottom:86%; left:10%; background-color:#B9D1EA; }
    .editbox { position: absolute; top: 15%; right: 10%; bottom: 15%; left: 10%; border: 1px solid #8C988A; }
    .defeditrow { height: 36px; line-height: 36px; margin: 2px 20px; border-bottom: 1px solid #8C988A; }
    .defeditrow ul { height: 36px; line-height: 36px; width: 100%; list-style: none; }
    .defeditrow ul li.cpt { width: 70%; height: 36px; line-height: 36px; text-align: left; float: left; }
    .defeditrow ul li.txt { width: 30%; height: 36px; line-height: 36px; text-align: right; float: left; }
</style>

@{
    var TradeNewsList = (List<ZGZY.Model.BS_Notices>)ViewBag.TradeNewsList;         // 公司公告和行业新闻共用一个数据表和数据模型
    
}

<div class="deftitle fnttitle">&nbsp;&nbsp;行业新闻</div>
<div class="editbox fntcpt">
    @{
        if (TradeNewsList != null && TradeNewsList.Count > 0)
        {
            foreach (ZGZY.Model.BS_Notices n in TradeNewsList)
            {
                <div class="defeditrow">
                    <ul>
                        <li class="cpt"><a href="/Information/DoTradeNews/@n.ID" target="_blank">@n.Title</a></li>
                        <li class="txt">@n.LastUpdatedDate.ToShortDateString()</li>
                    </ul>
                </div> 
            }
        }
    }
</div>
