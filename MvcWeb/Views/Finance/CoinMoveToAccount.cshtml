<script type="text/javascript">
    // 
    function OrderCoinClick() {
        var data = {};
        data.zhangHao = $("#txtZhanghao").val();
        data.num = $("#txtNum").val();
        data.pwd = $("#txtPwd").val();
        $.post("/Finance/TransferMRC", data, function (jsons) {
            if (jsons.status == 0) {　//成功
                alert(jsons.msg);
                location.href = "";
            } else {
                alert(jsons.msg)
                return;
            }
        }, 'json');
    };

    //$(function () {
