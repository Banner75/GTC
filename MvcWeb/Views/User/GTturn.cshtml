    ViewBag.Title = "GT账户转账";
    Layout = "~/Views/_Layout.cshtml";
}
<div id="give" class="core_main Fun_bank">
    <div class="core_title">
        <span class="core_title_con"><span>当前位置</span>：资产管理&gt;&gt;GT账户转账                              <span><a class="btn-danger" data-toggle="modal" href="/User/GTIndex">返回GT账户</a></span>      </span>

        <span class="core_title_edit"></span>
    </div>
    <div class="core_con">
        <form id="giveform" onsubmit="return checkform()" method="post" action="/index.php?s=/User/Fun_bank/giveSave/args/fun_bank[4]">
            <table class="tablebg">
                <tbody>
                    <tr>
                        <td class="tbkey">账户余额：</td>
                        <td class="tbval"><span>0.00</span></td>
                    </tr>
                    <tr>
                        <td class="tbkey">转账类型：</td>
                        <td class="tbval"><span>
